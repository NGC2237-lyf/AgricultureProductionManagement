            <result property="category" column="category" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="origin" column="origin" jdbcType="VARCHAR"/>
            <result property="harvestDate" column="harvest_date" jdbcType="DATE"/>
            <result property="quantity" column="quantity" jdbcType="DECIMAL"/>
            <result property="unit" column="unit" jdbcType="VARCHAR"/>
            <result property="price" column="price" jdbcType="DECIMAL"/>
            <result property="expirationDate" column="expiration_date" jdbcType="DATE"/>
            <result property="storageConditions" column="storage_conditions" jdbcType="VARCHAR"/>
