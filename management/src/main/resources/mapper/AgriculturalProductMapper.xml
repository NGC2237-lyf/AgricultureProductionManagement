        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.management.mapper.AgriculturalProductMapper">

    <resultMap id="BaseResultMap" type="com.management.entity.AgriculturalProduct">
            <id property="productId" column="product_id" jdbcType="INTEGER"/>
